<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    option item background :
        <item name="android:itemBackground">@color/main_background</item>
    -->


    <style name="LolTvThemeBase" parent="Theme.AppCompat.Light">

        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>

        <!--<item name="android:alertDialogTheme">@style/CustomAlertDialog</item>-->

    </style>

    <style name="LolTvTheme" parent="LolTvThemeBase">



        <!--With true, this helps the main view is started from the top of the display-->
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>


        <item name="android:actionBarStyle">@style/MyActionBar.Overlay</item>
        <item name="actionBarStyle">@style/MyActionBar.Overlay</item>

        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>

        <!-- Support library compatibility -->
        <item name="windowActionBar">true</item>
        <item name="android:windowActionBar">true</item>

        <!-- for ActionBarSherlock -->
        <item name="actionBarItemBackground">@drawable/bar_icon_selector</item>
        <!-- for native ActionBar -->
        <item name="android:actionBarItemBackground">@drawable/bar_icon_selector</item>


    </style>


    <style name="MyActionBar.Overlay" parent="Widget.AppCompat.ActionBar">
        <!--<item name="android:background">@null</item>-->
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:icon">@drawable/ic_home</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_bg</item>
        <item name="icon">@drawable/ic_home</item>



        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>

    </style>

    <style name="MyActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:typeface">serif</item>


    </style>

    <style name="MyActionButtonOverflow" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>


    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
    </style>

